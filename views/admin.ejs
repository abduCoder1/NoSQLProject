<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8">
    <link rel="icon" type="image/x-icon" href="images/logocsgo.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <title>CS:GO Cybersport Admin Panel</title>
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>
  <body style="color: white; background-color: #1d2630">
    <div class ="container mt-5">
      <div class="text-center">
        <h1 class="display-5 mb-5" style="font-size: 40px;"><strong>Admin Panel</strong></h1>
      </div>
      <div class="main row justify-content-center" style="font-size: 15px;">
        <form method="post" action="/admin/create" class = "row justify-content-center mb-4" autocomplete="off">
          <div class = "col-10 mb-3">
            <label for="fullName">Full Name</label>
            <input class = "form-control" type="text" id="fullName" name="fullName" placeholder="Enter Full Name" required>
          </div>
          <div class = "col-10 mb-3">
            <label for="username">Username</label>
            <input class = "form-control" type="text" id="username" name="username" placeholder="Enter User Name" required>
          </div>
          <div class = "col-10 mb-3">
            <label for="email">Email</label>
            <input class = "form-control" type="email" id="email" name="email" placeholder="Enter Email" required>
          </div>
          <div class = "col-10 mb-3">
            <label for="phoneNumber">Phone Number</label>
            <input class = "form-control" type="tel" id="phoneNumber" name="phoneNumber" placeholder="Enter Phone Number" required>
          </div>
          <div class = "col-10 mb-3">
            <label for="password">Password</label>
            <input class = "form-control" type="password" id="password" name="password" placeholder="Enter Password" required>
          </div>
          <div class = "col-10 mb-3">
            <label for="gender">Gender</label>
            <select id="gender" class = "form-control" name="gender">
              <option value="male">Male</option>
              <option value="female">Female</option>
            </select>
          </div>
          <div class = "col-10">
            <input class = "btn btn-success add-btn" type="submit" value="Submit">
          </div>
        </form>
        <div class="col-10 mt-5">
          <table class="table table-bordered table-dark">
            <thead>
              <tr>
                <th scope="col">Full Name</th>
                <th scope="col">Username</th>
                <th scope="col">Email</th>
                <th scope="col">Phone Number</th>
                <th scope="col">Password</th>
                <th scope="col">Confirmed Password</th>
                <th scope="col">Gender</th>
                <th scope="col">Joined</th>
                <th scope="col">View</th>
                <th scope="col">Delete</th>
              </tr>
            </thead>
            <tbody>
              <% users.forEach(function(user) { %>
              <tr>
                <td scope="row"><%= user.fullName %></td>
                <td><%= user.username %></td>
                <td><%= user.email %></td>
                <td><%= user.phoneNumber %></td>
                <td><%= user.password[0] %></td>
                <td><%= user.password[0] %></td>
                <td><%= user.gender %></td>
                <td><%= user.joined %></td>
                <td>
                  <form method="get" action="/admin/view/<%= user._id %>">
                    <button type="submit" class="btn btn-warning btn-sm delete">View</button>
                  </form>
                </td>
                <td>
                  <form method="post" action="/admin/delete/<%= user._id %>">
                    <button type="submit" class="btn btn-danger btn-sm delete">Delete</button>
                  </form>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
 <style>
  @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700&display=swap');
*{
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: 'Poppins',sans-serif;
}
 </style>
</html>
